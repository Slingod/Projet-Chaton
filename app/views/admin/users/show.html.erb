<div class="container text-center" style="display: flex; flex-direction: column; align-items: center;">
  <h1>Profil de l'utilisateur</h1>

  <p><strong>ID :</strong> <%= @user.id %></p>
  <p><strong>Email :</strong> <%= @user.email %></p>
  <p><strong>Rôle :</strong> <%= @user.admin? ? "Admin" : "Utilisateur" %></p>

  <div class="buttons" style="margin-top: 20px;">
    <%= link_to "Modifier", edit_admin_user_path(@user), class: "btn btn-warning" %>
    <%= link_to "Retour", admin_users_path, class: "btn btn-secondary" %>

    <%= link_to "Supprimer", admin_user_path(@user), method: :delete, remote: true, data: { confirm: "Es-tu sûr ?" }, class: "btn btn-danger delete-user", id: "delete-user-#{@user.id}" %>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.querySelector(".delete-user").addEventListener("ajax:success", function(event) {
      window.location.href = "/admin/users"; // Redirection après suppression
    });
  });
</script>
