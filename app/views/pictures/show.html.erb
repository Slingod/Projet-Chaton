<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; flex-direction: column; text-align: center;">
  <h1><%= @picture.name %></h1>

  <div class="d-flex justify-content-center align-items-center" style="width: 100%;">
    <% if @picture.image.attached? %>
      <div class="photo-item">
        <%= image_tag @picture.image.variant(resize_to_limit: [300, 300]).processed, class: "mx-auto d-block", alt: @picture.name, style: "max-width: 300px; height: auto;" %>
      </div>
    <% else %>
      <p>Aucune image attachée.</p>
      <%= image_tag 'default_image.jpg', class: "img-fluid mx-auto d-block", alt: "Image par défaut" %>
    <% end %>
  </div>
  
  <p><strong>Age:</strong> <%= @picture.age %></p>
  <p><strong>race:</strong> <%= @picture.breed %></p>
  
  <p><strong>Prix:</strong> <%= number_to_currency(@picture.price, unit: "€", delimiter: " ", format: "%n %u") %></p>

  
  <div class="text-center mt-4">
    <%= link_to picture_path(@picture), class: "btn btn-lg btn-outline-success px-4 py-2 rounded-pill shadow-sm hover-shadow-lg" do %>
      <span class="font-weight-bold">achat </span>
    <% end %>
  </div>

  <div class="text-center mt-3">
    <%= link_to 'Edit', edit_picture_path(@picture), class: 'btn btn-warning' %> |
  </div>
</div>
