<h1>Contactez-nous</h1>

<%= form_with model: @contact, url: contacts_path, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :message, "Message" %>
    <%= form.text_area :message %>
  </div>
  <div>
    <%= form.submit "Envoyer" %>
  </div>
<% end %>